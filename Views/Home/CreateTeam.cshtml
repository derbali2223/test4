@model Exercices07.Models.Entities.Team

@{
    ViewData["Title"] = "CreateTeam";
}

<h1>Création d'une nouvelle équipe de @ViewBag.sport.Name</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTeamSubmit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoundingDate" class="control-label"></label>
                <input asp-for="FoundingDate" class="form-control" />
                <span asp-validation-for="FoundingDate" class="text-danger"></span>
            </div>
          
                <input type="hidden" asp-for="SportId" value="@ViewBag.sport.Id" />
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
